<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.kanozo.mappers.ProductMapper">
	<select id="allproductRetrieve" resultType="ProductVO">
		SELECT * FROM product
	</select>
	
	<select id="productRetrieve" resultType="ProductVO">
		SELECT * FROM product WHERE productName like %#{productname}%"
	</select>
	
	<select id="getProductId" resultType="Integer">
		SELECT COUNT(productId) FROM product
	</select>
	
	<insert id="productInsert">
		INSERT INTO shoppingproduct VALUES(#{Id}, #{producttype}, #{productname}, #{explanation}, #{price}, #{price})
	</insert>
	
	<update id="productUpdate">
		UPDATE product SET productType = #{producttype} productName = #{productname} explanation = #{explanation} price = #{price} inventory = #{inventory} WHERE productId = #{productid}
	</update>
</mapper>
 